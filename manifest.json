{
  "manifest_version": 2,
  "name": "Measure It",
  "description": "Minimal and reliable ruler for developers",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "foreground.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": "icons8-ruler-48-bw.png"
  },
  "icons": {
    "48": "icons8-ruler-48.png"
  },
  "permissions": [
    "tabs"
  ]
}